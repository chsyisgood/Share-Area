<% include ./partials/header %>

<body class="form-page">
	<!-- <div class="row register-form"> -->
	<div class="container register-container">
		<div class="container register-form">
			
			<div class="text-center form-title">
				<h1 class="special-title">Login</h1>
			</div>
			
			<form action="/login" method="post">
					<div class="form-group register-item">
							<input class="form-control" type="text" name="username" placeholder="Username">
					</div>
					<div class="form-group register-item">
							<input class="form-control" type="password" name="password" placeholder="Password">
					</div>
					<div class="form-group register-item">
						<button class="btn btn-lg btn-primary btn-block btn-form title-text">Login</button>
					</div>
			</form>
			<a href="/forgot" class="normal-link">Forgot Password?</a>
			<a href="/register" class="normal-link float-right">Sign Up</a>
		</div>
	</div>
	<!-- </div> -->
</body>

