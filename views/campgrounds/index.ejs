		<!-- Slides Show And Create Info -->
		<div class="slideshow-container">
			<% for(var i = 1; i <= 4; i++){ %>
				<div class="mySlides fade mySlides-slide-<%=i%>">
					<div class="slideshow-content">
						<h1 class="title-text-inline<%= i == 3? "-dark": ""; %>">Welcome To Share-Area!</h1>

						<p class="p-text-inline<%= i == 3? "-dark": ""; %>">
							View our hand-picked campgrounds from all over the world
						</p>

						<p>
							<a class="btn btn-primary btn-lg title-text" href="/campgrounds/new">Add New Shareas</a>
						</p>
					</div>
				</div>
			<% } %>
			<a class="img-slides-prev" onclick="plusSlides(-1)">&#10094;</a>
			<a class="img-slides-next" onclick="plusSlides(1)">&#10095;</a>
			<div style="text-align:right">
				<span class="img-slides-dot" onclick="currentSlide(1)"></span> 
				<span class="img-slides-dot" onclick="currentSlide(2)"></span> 
				<span class="img-slides-dot" onclick="currentSlide(3)"></span> 
				<span class="img-slides-dot" onclick="currentSlide(4)"></span> 
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<h3 class="title-text title-text-subtitle">
					<span class="icon-subtitle">
						<i class="fas fa-cat title-text-subtitle-icon"></i>
					</span>
					<span class="title-text-subtitle-text">
						 Most Popular Shareas
					</span>
				</h3>
			</div>
		</div>

		
		<div class="row text-center">
			<% campgrounds.forEach(function(campground){ %>
				<div class="col-lg-3 col-md-4 col-sm-6">
					<div class="card">
					  <img src=" <%= campground.image %> " class="card-img-top" alt="<%= campground.name  %>">
					  <div class="card-body">
						<h5 class="card-title"> <%= campground.name %> </h5>
						<a class="btn btn-primary title-text" href="/campgrounds/<%= campground._id %>">More Info</a>
					  </div>
					</div>
				</div>
			<% }); %>
		</div>
		
	</div>

